<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape with a curved bottom -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3498db"/> <!-- Button background color -->
            <corners android:radius="10dp"/> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Top border to create a curved effect -->
    <item android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#3498db"/> <!-- Match the background color -->
            <corners android:radius="10dp"/> <!-- Should match the background radius -->
        </shape>
    </item>

    <!-- Text or Icon on the button -->
    <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent to overlay the curved top -->
        </shape>
    </item>

</layer-list>